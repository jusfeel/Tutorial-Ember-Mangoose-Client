<div class="container">
    <div class="row">

        <div class="col-xs-12 col-md-3 padding-top">
            <form {{action 'save' on="submit" }}>
                <div class="form-group">
                    <label>Title:</label> {{textarea value=titulo class="form-control"}} </div>
                <div class="form-group">
                    <label>Content:</label> {{textarea rows=10 value=contenido class="form-control"}} </div>
                <div class="form-group">
                    <label>Author:</label> {{textarea value=autor class="form-control"}} </div>
                <button class="btn btn-primary">Add</button>
            </form>
        </div>

        <div class="col-xs-12 col-md-9 padding-top">
            <div class="row">
               {{#each model as |item|}}

                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="card text-xs-right">
                        <img class="img-fluid card-img-top" src="assets/images/ember.jpg">
                            <div class="card-block">
                                <h4 class="card-title">{{item.title}}</h4>
                                <p> {{item.content}}</p>
                                <p> {{item.author}}</p>
                                {{#link-to 'note.show' item.id class="btn btn-primary" tagName="button" }}
                                view
                                {{/link-to}}
                            </div>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>

    </div>
</div>
